@model IEnumerable<CourseManagementInCore.Models.Trainee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TraineeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TraineeEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TraineeContact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TraineeImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TraineeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TraineeEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TraineeContact)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.TraineeImage)*@
                <img src="~/Images/Trainees/@item.TraineeImage" class="rounded-circle" height="80" width="80"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TraineeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TraineeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TraineeID" onclick="return confirm('Are You Sure To Delete This??')" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
