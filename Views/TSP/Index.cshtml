@model IEnumerable<CourseManagementInCore.Models.TSP>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TspName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TspAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TspContact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TspEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trainer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TspName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TspAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TspContact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TspEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trainer.TrainerName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TspID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TspID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TspID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
