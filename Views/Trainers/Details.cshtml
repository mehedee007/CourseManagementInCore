@model CourseManagementInCore.Models.Trainer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="card">
    <h4>Trainer Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TrainerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrainerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TrainerContact)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrainerContact)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TrainerEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrainerEmail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TrainerImage)
            
        </dt>
        <dd class="col-sm-10">
            @*@Html.DisplayFor(model => model.TrainerImage)*@
            <img src="~/Images/Trainers/@Model.TrainerImage" class="rounded-bottom" width="80" height="80" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course.CourseID)
        </dd>
    </dl>
    <div class="row">
        <table id="moduleInfo" class="table table-responsive table-sm">
            <thead>
                <tr>
                    <th>Designation</th>
                    <th>Institution</th>
                    <th>Experience (Years)</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.TrainerExperiences.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(x => x.TrainerExperiences[i].Designation, new { htmlAttribute = new { @class = "form-control" } })
                        </td>
                        <td>
                            @Html.DisplayFor(x => x.TrainerExperiences[i].Institution, new { htmlAttribute = new { @class = "form-control" } })
                        </td>
                        <td>
                            @Html.DisplayFor(x => x.TrainerExperiences[i].ExperienceInYears, new { htmlAttribute = new { @class = "form-control", type = "date" } })
                        </td>                     
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.TrainerID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
