@model IEnumerable<CourseManagementInCore.Models.Trainer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TrainerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainerContact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainerEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainerImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TrainerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrainerContact)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrainerEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.TrainerImage)*@
                    <img src="~/Images/Trainers/@item.TrainerImage" class="card-img" width="80" height="80" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.CourseName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TrainerID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TrainerID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.TrainerID" onclick="return confirm('Are You Sure To Delete This??')" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
