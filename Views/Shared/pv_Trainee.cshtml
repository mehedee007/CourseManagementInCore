@model IEnumerable<CourseManagementInCore.Models.Trainee>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@


<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TraineeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TraineeEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TraineeContact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TraineeImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TraineeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TraineeEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TraineeContact)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.TraineeImage)*@
                    <img src="~/Images/Trainees/@item.TraineeImage" class="rounded-circle" height="80" width="80" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.CourseName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TraineeID" class="editDialog btn btn-outline-success btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.TraineeID" class="DetailsDialog btn btn-outline-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.TraineeID" onclick="return confirm('Are You Sure To Delete This??')" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#Add").click(function (event) {
            event.preventDefault();
            $.get(this.href, function (response) {
                $(".divForAdd").html(response);

            });
            $("#Add-Modal").modal({
                backdrop: "static",
            }, 'show');
        });

        $(".editDialog").click(function (event) {
            event.preventDefault();
            $.get(this.href, function (response) {
                $(".divForUpdate").html(response);

            });
            $("#Edit-Modal").modal({
                backdrop: "static",
            }, 'show');
        });

        $(".DetailsDialog").click(function (event) {
            event.preventDefault();
            $.get(this.href, function (response) {
                $(".divForDetails").html(response);

            });
            $("#Details-Modal").modal({
                backdrop: "static",
            }, 'show');
        });

    })
</script>
